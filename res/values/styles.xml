<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Наследуемся от системной черной темы -->
    <style name="MySplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        
        <!-- Цвета для Android до 12 -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:statusBarColor">#000000</item>
        
        <!-- Обязательно для Android 12, 13, 14, 15 -->
        <item name="android:windowSplashScreenBackground">#000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Убираем эффект прозрачности, который может давать серый оттенок -->
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>
